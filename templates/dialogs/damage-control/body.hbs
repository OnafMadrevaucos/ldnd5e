<section class="dialog-content">
    <div class="form-group">
        <label>{{ localize "ldnd5e.dlControlItemLabel" }}:</label>
        <input type="text" name="name" value="{{item.name}}" disabled />
    </div>
    <div class="form-group">
        <label>{{ localize "ldnd5e.dlControlDamageType" }}:</label>
        <input type="text" name="damageType" value="{{ damageType }}" disabled />
    </div>
    <div class="form-group">
        <label>{{ localize "ldnd5e.dlControlACPenalty" }}:</label>
        <input type="text" name="acPenalty" value="{{ ACPenalty }}" disabled />
    </div>
    {{#unless unarmored}}
    <div class="form-group">
        <label class="repair-level-label">{{ repairLevelLabel }}</label>
        <input class="repair-level" type="range" min="0" max="{{ RealDL }}" value="0">
    </div>
    <div class="form-group">
        <label>{{ localize "ldnd5e.frControlItemPrice"}} <i class="currency gp" data-tooltip="{{ localize "DND5E.CurrencyGP" }}"></i></label>
        <input type="number" class="repair-price" id="repairLvlPrice" value="0" data-price="{{price}}" data-fee="{{fee}}"
            disabled />
    </div>
    {{/unless}}  
</section>