<div class="rolls">

    {{!-- Dice Display --}}
    <ul class="dice unlist">
        {{#each dice}}
        <li>
            <img src="{{ icon }}" alt="{{ label }}">
            <span class="label">{{ label }}</span>
        </li>
        {{/each}}
    </ul>

    {{!-- Formulas --}}
    <ul class="formulas unlist">
        {{#each rolls}}
        <li>
            {{!-- Formula & Type --}}
            <div class="formula-line">
                <span class="formula">{{ roll.formula }}</span>
                <span class="label">                    
                    {{ taticConfig.label }}  
                    <dnd5e-icon src="{{ taticConfig.icon.src }}" alt="{{ taticConfig.label }}"></dnd5e-icon>
                </span>
            </div>

            {{!-- Situational Bonus --}}
            <div class="form-group">
                <input type="text" class="full-width" name="roll.{{ @index }}.situational"
                       value="{{ roll.data.situational }}" placeholder="{{ localize "DND5E.RollSituationalBonus" }}">
            </div>
        </li>
        {{/each}}
    </ul>

</div>
