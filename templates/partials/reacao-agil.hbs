<ol class="items-list inventory-list">
{{#each sections as |section sid|}}
    {{#if section.ar}} 
    <li class="items-header flexrow">
        <h3 class="item-name flexrow">{{localize section.label}}</h3>
        
        <div class="item-detail">{{localize "ldnd5e.profTitle"}}</div>
        <div class="item-detail">{{localize "ldnd5e.conTitle"}}</div>
        <div class="item-detail">{{localize "ldnd5e.exauTitle"}}</div>
        <div class="item-detail">{{localize "ldnd5e.penTitle"}}</div>
        <div class="item-detail total-penalty">{{localize "ldnd5e.ftTitle"}}</div>       
    </li>

    <ol class="item-list">
    {{#each section.actors as |actor aid|}}
        <li class="item flexrow {{section.css}}"
            data-actor-id="{{actor.id}}">
            <div class="item-name flexrow">    
                <div class="item-image actor-portrait" tabindex="0" role="button" aria-label="{{actor.name}}" style="background-image: url('{{actor.img}}')"></div>
                <h4 class="ar-control">{{actor.name~}}</h4>                                            
            </div>
            <div class="item-detail">{{actor.data.data.profMod}}</div>
            <div class="item-detail">{{actor.data.data.abilities.con.strMod}}</div>
            <div class="item-detail">{{actor.data.data.attributes.exhaustion}}</div>
            <div class="item-detail">{{actor.data.data.attributes.rpMod}}</div>
            <div class="item-detail">{{actor.data.data.attributes.fumbleRange}}</div>   
        </li>
    {{/each}}
    </ol>
    {{/if}}
{{/each}}
</ol>